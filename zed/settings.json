// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "active_pane_modifiers": {
    "inactive_opacity": 0.75
  },
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },
  "auto_update_extensions": {
    "vue": false
  },
  "base_keymap": "JetBrains",
  "buffer_line_height": "comfortable",
  "buffer_font_size": 16,
  "collaboration_panel": { "button": false },
  "confirm_quit": false,
  "experimental.theme_overrides": {
    // https://github.com/zed-industries/zed/blob/main/assets/themes/one/one.json
    // 6 digits for the color, 2 for transparency
    // "version_control.deleted": "#ff0000ff",
    // "version_control.deleted_background": "#ff0000ff",
    // "version_control.modified": "#FFFF00ff",
    // "version_control.modified_background": "#FFFF00ff",
    // "version_control.added": "#39FF14ff",
    // "version_control.added_background": "#39FF14ff",
    // "editor.active_line.background": "#FFFFFF15"
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "file_finder": {
    "modal_max_width": "medium"
  },
  "file_types": {
    // https://zed.dev/docs/languages/xml
    "XML": ["xsd"]
  },
  "format_on_save": "on",
  "formatter": "auto",
  "git_panel": {
    "status_style": "label_color",
    "button": true
  },
  "icon_theme": "Material Icon Theme",
  "inlay_hints": {
    "show_parameter_hints": true,
    "show_other_hints": true,
    "toggle_on_modifiers_press": { "alt": true },
    "show_type_hints": true,
    "enabled": false
  },
  "languages": {
    "JavaScript": {
      "formatter": [
        // "prettier",
        {
          "code_actions": {
            "source.fixAll.eslint": true,
            "source.organizeImports": true
          }
        }
      ]
    },
    "TypeScript": {
      "formatter": [
        // "prettier",
        {
          "code_actions": {
            "source.fixAll.eslint": true,
            "source.organizeImports": true
          }
        }
      ]
    }
  },
  "lsp": {
    "vtsls": {
      "initialization_options": {
        // explicitly allow move to file code action
        "enableMoveToFileCodeAction": true
      }
    }
  },
  "outline_panel": {
    "default_width": 500,
    "indent_size": 10
  },
  "project_panel": {
    "dock": "left",
    "indent_size": 10,
    "auto_fold_dirs": false,
    "entry_spacing": "standard",
    "show_diagnostics": "errors"
  },
  "tabs": {
    "git_status": true,
    "file_icons": true,
    "show_diagnostics": "errors",
    "show_close_button": "hover"
  },
  "telemetry": {
    "metrics": false
  },
  "terminal": {
    "font_family": "MesloLGS Nerd Font"
  },
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "One Dark"
  },
  "toggle_relative_line_numbers": true,
  "ui_font_size": 16,
  "use_system_prompts": false,
  "use_smartcase_search": true,
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true,
    "highlight_on_yank_duration": 500,
    "use_smartcase_find": true
  }
}
